const response = await fetch(
  "https://eaoql5a9ab.execute-api.ap-southeast-2.amazonaws.com/users/2aff71b0-3ee9-11ee-bdeb-7797f77643a3",
  {
    method: "GET",
  }
);

const data = await response.json();

const { username, wishlist } = data;
---

<form>
  <label>
    Username
    <input
      type="text"
      id="username"
      name="username"
      required
      placeholder={username}
      value={username}
    />
  </label>

  <label>
    Wishlist
    <textarea
      id="message"
      name="message"
      required
      placeholder={wishlist.join(", ")}></textarea>
  </label>
  <button type="submit">Send</button>
</form>
