<div id="auth-user-button"></div>

<script>
  import { auth } from "../../lib/authStore";

  auth.subscribe(async (clerk) => {
    if (clerk !== null) {
      await clerk.load();

      if (clerk.loaded) {
        const userButton =
          document.querySelector<HTMLDivElement>("#auth-user-button")!;
        clerk.mountUserButton(userButton, {
          afterSignOutUrl: "/",
        });
      }
    }
  });
</script>
